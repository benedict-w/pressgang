{% if add_gtag_script %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ google_adwords_id|e('html_attr') }}"></script>
{% endif %}

<script>

    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());
    gtag('config', '{{ google_adwords_id|e('html_attr') }}');

</script>

{% if google_conversion_label %}
    <script>
        gtag('event', 'conversion', {
            'send_to': '{{ google_adwords_id|e('html_attr') }}/{{ google_conversion_label|e('html_attr') }}',
            'value': '{{ order_total|e('html_attr') }}',
            'currency': '{{ currency|e('html_attr') }}',
            'transaction_id': '{{ tracking_id|e('html_attr') }}'
        });
    </script>
{% endif %}
