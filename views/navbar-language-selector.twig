<!-- language selector -->
<ul class="nav navbar-nav navbar-right languages-menu">
    {% if languages.length <= 2 %}
        {% for language in languages if not language.active %}
            <li>
                <a id="language-selector" href="{{ language.url|e('html_attr') }}">
                    <img src="{{ language.country_flag_url|e('html_attr') }}" title="{{ language.translated_name|e('html_attr') }}">
                    <span>{{ language.native_name|e }}</span>
                </a>
            </li>
        {% endfor %}
    {% else %}
        <li class="dropdown">
            <a id="language-selector" class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                {% for language in languages if language.active %}
                    <img src="{{ language.country_flag_url|e('html_attr') }}" title="{{ language.translated_name|e('html_attr') }}">
                    <span>{{ language.native_name|e }}</span>
                {% endfor %}
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="language-switcher">
                {% for language in languages %}
                    <li>
                        <a href="{{ language.url|e('html_attr') }}">
                            <img src="{{ language.country_flag_url|e('html_attr') }}" title="{{ language.translated_name|e('html_attr') }}">
                            <span>{{ language.native_name|e }}</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </li>
    {% endif %}
</ul>