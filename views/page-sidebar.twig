{% extends "base.twig" %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-9">
                <section class="page">
                    <header class="page-header">
                        <h1 class="page-title">{{ page.title }}</h1>
                    </header>
                    <div class="page-body">
                        {% if page.thumbnail %}
                        <div class="page-thumbnail">
                            {% include 'img.twig' with { 'src': page.thumbnail, 'alt': page.title } %}
                        </div>
                        {% endif %}
                        <div class="page-content">
                            {% block content %}
                                {{ page.content }}
                            {% endblock %}
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-3">
                {% block sidebar %}
                    {% include('sidebar.twig') %}
                {% endblock %}
            </div>
        </div>
        <div class="row">
            {{ widget_page_below }}
        </div>
    </div>
{% endblock %}