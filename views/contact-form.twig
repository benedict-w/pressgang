<form class="contact-form form-horizontal" method="post" action="{{ (fn('admin_url', 'admin-post.php')|e('esc_url')) }}">
    {% do fn('wp_nonce_field', action) %}
    <input type="hidden" name="action" value="{{ action|e('html_attr') }}">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">{{ __("Name", THEMENAME) }}</label>
        <div class="col-sm-10">
            <input id="name" type="text" class="form-control" name="contact[name]" placeholder="{{ __("Name", THEMENAME) }}" value="{{ name }}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">{{ __("E-Mail Address", THEMENAME) }}</label>
        <div class="col-sm-10">
            <input id="email" type="email" class="form-control" name="contact[email]" placeholder="{{ __("E-Mail Address", THEMENAME) }}" value="{{ email }}" required>
        </div>
    </div>
    <div class="form-group">
        <label for="message" class="col-sm-2 control-label">{{ __("Message", THEMENAME) }}</label>
        <div class="col-sm-10">
            <textarea id="message" class="form-control" rows="8" name="contact[message]" required>{{ message }}</textarea>
        </div>
    </div>
    {% if recaptcha %}
    <div class="form-group">
        <div class="g-recaptcha" data-sitekey="{{ recaptcha }}"></div>
    </div>
    {% endif %}
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="{{ __("Send", THEMENAME) }}" class="btn btn-primary">
        </div>
    </div>
    {% if success %}
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <p class="alert alert-success">{{ success }}</p>
        </div>
    </div>
    {% elseif error %}
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <p class="alert alert-danger">{{ error }}</p>
        </div>
    </div>
    {% endif %}
</form>