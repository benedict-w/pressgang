{% extends "base.twig" %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% for page in pages %}
                {% block content %}
                    <section id="{{ page.post_name }}" class="page">
                        {% if (loop.index0) %}
                        <h1>{{ page.title }}</h1>
                        {%  endif %}
                        <div class="page-body">
                            <div class="page-content">
                                {{ page.content }}
                            </div>
                        </div>
                    </section>
                {% endblock %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}