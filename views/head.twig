<head>
    <meta charset="{{ site.charset}}" />
    <title>{{ function('wp_title', '|', false, 'right') }}</title>
    <meta name="description" content="{{ site.description|apply_filters('meta_description') }}" />
    {% if site.keywords %}
    <meta name="keywords" content="{{ site.keywords }}" />
    {% endif %}
    <link rel="stylesheet" href="{{ theme.link }}/css/{{ site.stylesheet }}" media="screen" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{ site.pingback_url }}" />
    {% include 'open-graph.twig' %}
    <!-- wp head -->
    {{ function('wp_head') }}
</head>