<script type="application/ld+json">
{
  "@context":"http://schema.org",
  "@type":"ItemList",
  "itemListElement": [
  {% for item in items %}
    {
      "@type": "ListItem",
      "position": {{ loop.index|e('html_attr') }},
      "url": "{{ item.link }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>