{% extends 'json-ld/script.twig' %}

{% block schema %}
  {
    "@context": "http://schema.org",
    "@type": "Person",
    "givenName": "{{ given_name|e('html_attr') }}",
    "familyName": "{{ family_name|e('html_attr') }}",
    "image": "{{ image|e('html_attr') }}",
    "url": "{{ url|e('html_attr') }}",
    "jobTitle": "{{ job_title|e('html_attr') }}",
    "awards": "{{ awards|e('html_attr') }}",
    "worksFor": {
      "@id": "{{ works_for|e('html_attr') }}"
    },
    "workLocation": "{{ work_location|e('html_attr') }}",
    "description": "{{ description|e('html_attr') }}"
  }
{% endblock %}
