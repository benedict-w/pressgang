<ul class="{{ class }}">
    {% for breadcrumb in breadcrumbs %}
    <li class="{{ breadcrumb.class }}">
        {% if breadcrumb.url %}
            <a href="{{ breadcrumb.url|e('html_attr') }}">{{ breadcrumb.title }}</a>
        {% else %}
            {{ breadcrumb.title }}
        {% endif %}
    </li>
    {% endfor %}
</ul>