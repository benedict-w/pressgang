<nav aria-label="breadcrumb">
<ol class="{{ class }}" itemscope itemtype="http://schema.org/BreadcrumbList">
    {% for breadcrumb in breadcrumbs %}
    <li class="breadcrumb-item {{ breadcrumb.class }}" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        {% if breadcrumb.url %}
            <a href="{{ breadcrumb.url|e('html_attr') }}" itemprop="item"><span itemprop="name">{{ breadcrumb.title }}</span></a>
        {% else %}
            <span itemprop="name">{{ breadcrumb.title }}</span>
        {% endif %}
        <meta itemprop="position" content="{{ loop.index }}">
    </li>
    {% endfor %}
</ol>
</nav>