<article>
    <header class="post-header">
        <h1 class="post-title">{{ post.title }}</h1>
        {% block after_post_header %}
            {% include('post-meta.twig') %}
            {% do action('after_post_header') %}
        {% endblock %}
    </header>
    <div class="post-body">
        {% if post.thumbnail %}
        <div class="post-thumbnail">
            {% include 'img.twig' with { 'image': post.thumbnail, 'alt': post.title } %}
        </div>
        {% endif %}
        <div class="post-content">
            {{ post.content }}
        </div>
        {% block after_post_content %}
            {% include('post-tags.twig') %}
            {% include('post-nav.twig') %}
        {% endblock %}
    </div>
</article>