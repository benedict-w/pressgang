{%  if fn('comments_open') %}
    <h4>{{ title|default(__("Add a Comment", THEMENAME)) }}</h4>

    <form id="commentform" class="comment-form" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">

        <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
        <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

        {% if user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <div class="form-group">
                <label for="author" class="control-label">{{ __("Name", THEMENAME) }}</label>
                <input required name="author" type="text" id="author" class="form-control" placeholder="{{ __("Your Name", THEMENAME) }}" />
            </div>
            <div class="form-group">
                <label for="email" class="control-label">{{ __("E-Mail", THEMENAME) }}</label>
                <input required name="email" type="text" id="email" class="form-control" placeholder="{{ __("Your E-Mail Address", THEMENAME) }}" />
            </div>
            <div class="form-group">
                <label for="url" class="form-label">{{ __("Website", THEMENAME) }}</label>
                <input name="url" id="url" type="text" class="form-control" placeholder="{{ __("Your Website", THEMENAME) }}" />
            </div>
        {% endif %}

        <div class="form-group">
            <label for="comment" class="form-label">{{ __("Comment", THEMENAME) }}</label>
            <textarea placeholder="{{ __("Your Comment", THEMENAME) }}" name="comment" rows="5" id="comment" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" name="Submit" class="btn btn-primary">{{ __("Send", THEMENAME) }}</button>
            <button id="cancel-comment-reply-link" type="reset" class="btn btn-default">{{ __("Cancel", THEMENAME) }}</button>
        </div>
    </form>
{% endif %}